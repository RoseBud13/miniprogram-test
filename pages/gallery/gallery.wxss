Page {
  background-color: #f5f5f5;
  overflow-y: hidden;
}

.content-wrapper {
  position: fixed;
  top: 0;
  height: 100vh;
  width: 100vw;
}

.gallery-container {
  position: relative;
  height: 100vh;
  width: 100vw;
}

.img-slider {
  position: relative;
  height: 100%;
}

.gallery-img {
  position: relative;
  height: 100%;
}

.text-container {
  position: relative;
  height: 100vh;
  width: 100vw;
  background-color: beige;
}

.info-wrapper {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
